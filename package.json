{
  "name": "mycel-frontend",
  "version": "1.0.0",
  "private": true,
  "description": "Mycel frontend monorepo",
  "author": "",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf \"**/node_modules\"",
    "fresh": "pnpm clean && pnpm i",
    "nuke": "rimraf pnpm-lock.yaml && pnpm fresh",
    "spore": "pnpm -F \"spore\"",
    "build": "pnpm -r build",
    "spore-og": "pnpm -F \"spore-og\"",
    "shared": "pnpm -F \"@mycel/shared\""
  },
  "devDependencies": {
    "lefthook": "^1.6.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "pnpm": ">=8.14.0",
    "npm": "use pnpm!",
    "yarn": "use pnpm!"
  }
}
